{{!-- views/emails/userVerification.hbs --}}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>User Verification</title>
  </head>

  <body style="margin:0;padding:0;background:linear-gradient(135deg,#0f2027,#203a43,#2c5364);font-family:Arial,Helvetica,sans-serif;color:#fff;text-align:center;padding:40px 20px;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="width:100%;padding:0;margin:0;">
      <tr>
        <td align="center">
          <table role="presentation" width="600" cellspacing="0" cellpadding="0" style="width:600px;max-width:600px;background:rgba(255,255,255,0.08);border-radius:16px;overflow:hidden;box-shadow:0 8px 30px rgba(0,0,0,0.3);">
            <tr>
              <td style="padding:40px 30px;">
                <h2 style="margin:0 0 10px 0;font-size:24px;font-weight:700;line-height:1.2;color:#ffffff;">
                  Hello, {{name}}
                </h2>

                <p style="margin:10px 0;font-size:15px;line-height:1.6;color:#dddddd;">
                  Thank you for signing up with Maryland. Please verify your account by clicking the button below.
                </p>

                <a
                  href="{{href_url}}"
                  style="display:inline-block;margin-top:25px;padding:12px 26px;font-size:16px;font-weight:700;text-decoration:none;border-radius:8px;background:linear-gradient(90deg,#00c6ff,#0072ff);color:#ffffff;box-shadow:0 4px 15px rgba(0,114,255,0.3);"
                >
                  Verify Account
                </a>

                <p style="margin:10px 0;font-size:15px;line-height:1.6;color:#dddddd;">
                  If you did not create this account, you can safely ignore this email.
                </p>

                <div style="margin-top:30px;font-size:12px;line-height:1.4;color:#aaaaaa;">
                  &copy; {{year}} {{orgName}}. All rights reserved.
                </div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
